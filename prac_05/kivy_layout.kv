BoxLayout:
    orientation: 'vertical'
    
    Label:
        text: app.status_text
        font_size: 60
        size_hint_y: 0.2  # Takes up 20% of vertical space

    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Up"
            on_press: app.handle_press(1)
        Button:
            text: "Down"
            on_press: app.handle_press(-1)

    BoxLayout:
        id: names_box

    Label:
        text: "I did this :)"
        size_hint_y: 0.1  # Takes up 10% of vertical space
